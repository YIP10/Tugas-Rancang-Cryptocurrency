            android:layout_marginTop="96dp"
            android:layout_marginRight="8dp"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tw1"
            android:text="@string/tw"
